@page "/country"

@inherits EntityFormPage<CountryHandlerRequest, CountryHandlerResponse, Country>

<PageTitle>@this.Localizer["Countries_PageTitle"]</PageTitle>

<EntityForm PageTitle="@this.Localizer["Country_PageTitle"]"
        EntityFormPage="@this"
        TEntityHandlerRequest="CountryHandlerRequest"
        TEntityHandlerResponse="CountryHandlerResponse"
        TEntity="Country">
    <FieldsArea>
        <RadzenAccordionItem Text="@this.Localizer["EntityForm_Tab_General"]" Selected="true">
            <RadzenTextBox Value="Country Name"/>
        </RadzenAccordionItem>
    </FieldsArea>
</EntityForm>

