@page "/countries"

@inherits SearchPage<CountrySummariesQueryRequest, CountrySummariesQueryResponse, CountrySummary>

<PageTitle>@this.Localizer["Countries_PageTitle"]</PageTitle>

<Search PageTitle="@this.Localizer["Countries_PageTitle"]"
        TSummariesQueryRequest="CountrySummariesQueryRequest"
        TSummary="CountrySummary"
        Results="@this.Results"
        @ref="@this.Search"
        @bind-SelectedResults="@this.SelectedResults"
        ActionButtons="@this.ActionButtons"
        OnSearchCallback="@this.ExecuteSearch">
    <SearchColumnsArea>
        <RadzenDataGridColumn TItem="CountrySummary" Property="CountryId" Title="Id" />
        <RadzenDataGridColumn TItem="CountrySummary" Property="Name" Title="Name" />
    </SearchColumnsArea>
</Search>

