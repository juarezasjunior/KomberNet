@page "/countries"

@inherits SearchFormPage<CountrySummariesGetRequest, CountrySummariesGetResponse, CountrySummary, CountrySummariesGetRequestValidator>

<PageTitle>@this.Localizer["Countries_PageTitle"]</PageTitle>

<SearchFormControl PageTitle="@this.Localizer["Countries_PageTitle"]"
                   SearchFormPage="@this"
                   TSummariesGetRequest="CountrySummariesGetRequest"
                   TSummariesGetResponse="CountrySummariesGetResponse"
                   TSummary="CountrySummary"
                   TValidator="CountrySummariesGetRequestValidator"
                   Take="4">
    <Columns>
        <RadzenDataGridColumn TItem="CountrySummary" Property="CountryId" Title="Id" />
        <RadzenDataGridColumn TItem="CountrySummary" Property="Name" Title="@this.Localizer["Country_Name"]" />
    </Columns>
</SearchFormControl>

