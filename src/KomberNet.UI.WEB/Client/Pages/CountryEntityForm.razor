@page "/country"

@inherits EntityFormPage<CountryHandlerRequest, CountryHandlerResponse, Country, CountryHandlerRequestValidator>

<PageTitle>@this.Localizer["Countries_PageTitle"]</PageTitle>

<EntityFormControl PageTitle="@this.Localizer["Country_PageTitle"]"
            EntityFormPage="@this"
            TEntityHandlerRequest="CountryHandlerRequest"
            TEntityHandlerResponse="CountryHandlerResponse"
            TEntity="Country"
            TValidator="CountryHandlerRequestValidator">
    <FieldsArea>
        <RadzenAccordionItem Text="@this.Localizer["EntityForm_Tab_General"]" Selected="true">
            <FieldControl FieldName="@nameof(this.Request.Entity.Name)"
                          FieldDescription="@this.Localizer["Country_Name"]"
                          IsRequired=true>
                <RadzenTextBox Name="@nameof(this.Request.Entity.Name)" @bind-Value="@this.Entity.Name" />
            </FieldControl>
        </RadzenAccordionItem>
    </FieldsArea>
</EntityFormControl>